<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Written by</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.author %></td>
        <td><%= article.time_since_written %></td>
        <!-- % if current_user.admin? %> -->
          <td>
            <%= link_to edit_article_path(article), class:"btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil">Edit</i>
            <%end%>
          </td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!-- % end %> -->
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img itemprop="image" src="http://i2.wp.com/thehockeywriters.com/wp-content/uploads/2015/09/Max-Domi.jpg?zoom=2&amp;resize=395%2C238" alt="5 Reasons to Believe in the San Jose Sharks" class="img-responsive img-thumbnail" width="395" height="238">
        <div class="caption">
          <%= link_to article.title, article, :class=>"btn btn-primary title-link" %>
        </div>
      </div>
    </div>
  <%end%>

</div>

<br>
<%= link_to 'New Article', new_article_path %>
